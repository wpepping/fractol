{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"-Werror",
				"-Wextra",
				"-Wall",
                "*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
				"-L.",
				"-L/usr/lib/x86_64-linux-gnu/",
				"-lmlx",
				"-lm",
				"-lX11",
				"-lXext"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
